						| {{ "BASE.LABEL.CONTACT_NOW" | translate }}

mixin client(client, index)
	.swiper-slide.service-block-two.wow.fadeInUp.mr-30.w-270(
		[attr.data-swiper-slide-index]=`${index}`)
		.inner-box
			.image-box
				figure.image
					a([routerLink]=`[ "/client-success/detail", ${client}.id ]`)
						.image-client(
							[style]=`"background-image: url(" + ${client}?.thumbnail?.url + ");"`)
				i.icon.fa.fa-graduation-cap
			.lower-content
				h6.title.text-truncate-multi-line-3.mah-86
					a([routerLink]=`[ "/client-success/detail", ${client}.id ]`)
						| {{ #{client}?.name | empty }}
				.text-truncate-multi-line.text
					| {{ #{client}?.story | empty }}

