			.sub-title
				span.txt
					| 99%
					| {{ "BASE.LABEL.SUCCESS_RATE" | translate }}
			h1.title
				| {{ "BASE.LABEL.ALPHA" | translate }}&nbsp;
				br
				| {{ "BASE.LABEL.GIVE_VIETNAM" | translate }}&nbsp;
				br
				| {{ "BASE.LABEL.GO_FAR" | translate }}
			.btn-box
				a.theme-btn.btn-style-one(routerLink='/service')
					span.btn-title
						| {{ "BASE.LABEL.EXPLORE_NOW" | translate }}
				a.theme-btn.btn-style-two(routerLink='/contact')
